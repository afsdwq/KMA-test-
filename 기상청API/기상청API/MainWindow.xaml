<Window x:Class="기상날씨앱.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="기상 날씨 앱" Height="250" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                <Label Content="X 좌표:" Width="50"/>
                <TextBox x:Name="TextBox1" Width="50" />
                <Label Content="Y 좌표:" Width="50" Margin="10,0,0,0"/>
                <TextBox x:Name="TextBox2" Width="50" />
                <Label Content="예보시간(HHmm):" Width="90" Margin="10,0,0,0"/>
                <TextBox x:Name="TextBoxFcstTime" Width="50" />
                <Button Content="날씨 조회" Margin="10,0,0,0" Click="GetWeather_Click"/>
            </StackPanel>

            <TextBlock x:Name="TextBlockWeather" FontSize="16" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</Window>
