<Window x:Class="기상날씨앱.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="날씨 조회" Height="400" Width="600">
    <Grid Margin="10" RenderTransformOrigin="0.498,0.536">

        <Label Content="X좌표" HorizontalAlignment="Left" Height="26" Margin="50,10,0,0" VerticalAlignment="Top" Width="59" RenderTransformOrigin="0.49,0.583"/>
        <Label Content="Y좌표" HorizontalAlignment="Left" Height="26" Margin="200,7,0,0" VerticalAlignment="Top" Width="59"/>
        <TextBox Name="TextBox1" HorizontalAlignment="Left" Height="22" Margin="100,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98"/>
        <TextBox Name="TextBox2" HorizontalAlignment="Left" Height="22" Margin="250,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="98"/>
        
        <Button Content="날씨 조회" Width="120" Height="30" Margin="300,-10,0,290" Click="GetWeather_Click" />

        <ListView x:Name="weatherListView" Margin="0,10,0,-40" Height="300">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="지역명" DisplayMemberBinding="{Binding RegionName}" Width="200"/>
                    <GridViewColumn Header="시간" DisplayMemberBinding="{Binding fcstTime}" Width="100"/>
                    <GridViewColumn Header="기온" DisplayMemberBinding="{Binding T1H}" Width="100"/>

                    <GridViewColumn Header="하늘상태" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                                    <!-- 텍스트 아래로 이미지 배치 -->
                                    <TextBlock Text="{Binding PTY}" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                    <Image Width="100" Height="100" Source="{Binding Img}" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <GridViewColumn Header="습도" DisplayMemberBinding="{Binding REH}" Width="100"/>

                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
